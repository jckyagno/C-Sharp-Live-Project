@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
  ViewBag.Title = "Create";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

<div class="container blog-form">
    <h4>Create</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <!-- NAME SECTION -->
    <div class="form-group row">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "col-md-12 col-form-label" })
        <div class="col-md-12">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <!-- END NAME SECTION -->
    <!-- BIO SECTION -->
    <div class="form-group row">
        @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "col-md-12 col-form-label" })
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Bio, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
        </div>
    </div>
    <!-- END BIO SECTION -->

    <div class="form-group row">
        <!-- JOINED SECTION -->
        <div class="col-md-6">
            @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "col-form-label" })
            @Html.EditorFor(model => model.Joined, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Joined, "", new { @class = "text-danger" })
        </div>
        <!-- END JOINED SECTION -->
        <!-- LEFT SECTION -->
        <div class="col-md-6">
            @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "col-form-label" })
            @Html.EditorFor(model => model.Left, new { htmlAttributes = new { @type = "datetime-local", @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Left, "", new { @class = "text-danger" })
        </div>
        <!-- END LEFT SECTION -->
    </div>


    <div class="form-group row">
        <div class="ml-3 mr-3">
            <button class="btn btn-secondary"> @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "text-white" }) </button>
        </div>

        <div>
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}



@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
