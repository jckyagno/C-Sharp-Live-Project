
@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalHistory>

@foreach (var item in Model.Reverse())
{
<div>
    <div class="card col-xs-1" data-toggle="collapse" data-target="#collapse-@item.RentalHistoryId" aria-expanded="false" aria-controls="collapse-@item.RentalHistoryId">
        <div class="card-header row h-100" id="heading-@item.RentalHistoryId">
            <div class="col-xs-1 fancy-checkbox my-auto pr-2">
                @Html.DisplayFor(modelItem => item.RentalDamaged)
                <i class="fa-solid fa-circle-check unchecked" style="color: #00ff00;"></i>
                <i class="fa-solid fa-circle-xmark checked" style="color: #ff0000;"></i>
            </div>
            <div id="item-name" class="badge badge-dark col-xs-1 my-auto">
                @Html.DisplayFor(modelItem => item.Rental)
            </div>
            @if (item.RentalDamaged == true)
            {
                <div class="text-truncate pl-2 col-xs-1 text-truncate my-auto" style="color:black;">
                    Damages incurred.
                </div>
                <div class="dropdown ml-auto">
                    <button id="rental-history-ellipses-dropdown" class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="./RentalHistories/Edit/@item.RentalHistoryId"><i class="fa-solid fa-pen-to-square" style="color: #323232;"></i> Edit</a>
                        <a class="dropdown-item" href="./RentalHistories/Details/@item.RentalHistoryId"><i class="fa-solid fa-circle-info" style="color: #323232;"></i> Details</a>
                        <div class="dropdown-divider"></div>
                        <a id="delete-button" class="dropdown-item" href="./RentalHistories/Delete/@item.RentalHistoryId"><i class="fa-solid fa-trash-can" style="color: #BD1A11;"></i> Delete</a>
                    </div>
                </div>
                <div id="collapse-@item.RentalHistoryId" class="collapse w-100" aria-labelledby="heading-@item.RentalHistoryId" data-parent="#rental-list">
                    <div class="card-body" style="color:black;">
                        @Html.DisplayFor(modelItem => item.DamagesIncurred)
                    </div>
                </div>
            }
            else
            {
                <div class="text-truncate pl-2 col-xs-1 my-auto" style="color:grey;">
                    None
                </div>
                <div class="dropdown ml-auto">
                    <button id="rental-history-ellipses-dropdown" class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="./RentalHistories/Edit/@item.RentalHistoryId"><i class="fa-solid fa-pen-to-square" style="color: #323232;"></i> Edit</a>
                        <a class="dropdown-item" href="./RentalHistories/Details/@item.RentalHistoryId"><i class="fa-solid fa-circle-info" style="color: #323232;"></i> Details</a>
                        <div class="dropdown-divider"></div>
                        <a id="delete-button" class="dropdown-item" href="./RentalHistories/Delete/@item.RentalHistoryId"><i class="fa-solid fa-trash-can" style="color: #BD1A11;"></i> Delete</a>
                    </div>
                </div>
                <div id="collapse-@item.RentalHistoryId" class="collapse w-100" aria-labelledby="heading-@item.RentalHistoryId" data-parent="#rental-list">
                    <div class="card-body" style="color:black;">
                        @Html.DisplayFor(modelItem => item.DamagesIncurred)
                    </div>
                </div>
            }
        </div>
    </div>
</div>
}

